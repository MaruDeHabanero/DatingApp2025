}

post {
  url: {{baseUrl}}/api/account/login
  body: json
  auth: inherit
}

body:json {
  {
  	"email": "arenita@test.com",
    "password": "Pa$$w0rd"
  }
}

script:post-response {
  const user = res.getBody();
  
  test("Has properties", function () {
      expect(user).to.have.property('username');
      expect(user).to.have.property('token');
  });
  
  if (test("Has properties")) {
      bru.setGlobalEnvVar('token', user.token);
  }
}

tests {
  test("Should be able to login", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  const data = res.body;
  bru.setEnvVar('arenitaToken', data.token);
}

